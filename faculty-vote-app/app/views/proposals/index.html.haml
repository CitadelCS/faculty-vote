-#  This file is app/views/proposals/open_proposals.html.haml
%h1  Open Proposals

%table#movies
  %thead
    %tr
      %th Name 
      %th Yes
      %th No
      %th Abstain
      %th Date
  %tbody
    - @proposals.each do |proposal|
      %tr
        %td= proposal.name
        %td= proposal.number_yes
        %td= proposal.number_no
        %td= proposal.number_abstain
        %td= proposal.updated_at
        
  %br/
      
  %td= link_to "Create New", new_proposal_path

