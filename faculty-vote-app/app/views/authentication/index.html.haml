!!!
%html{:dir => "ltr", :lang => "en"}
  %head
    %title Sign In
    
  %body
    .container
      %h2 Sign In
      %form{:action => "/signin", :method => "post"}
        .form-group
          %label{:for => "email"} Email:
          %input#email.form-control{:name => "email", :placeholder => "Enter email", :type => "email"}/
        .form-group
          %label{:for => "pwd"} Password:
          %input#pwd.form-control{:name => "pwd", :placeholder => "Enter password", :type => "password"}/
        %button.btn.btn-default{:type => "submit"} Submit
= link_to "Sign Up", signup_path
